@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /> <br />
@using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
{
             <label>Şehir ID Bilgisini Giriniz</label>
             <input type="text" class="form-control" name="cityID"/>
                 <br />
                 <button class="btn btn-primary">Şehir İçin Otelleri Listele</button>
}

 <br />

     <table class="table table-bordered">
              <thead>
                 <tr>
                    <th>#</th>
                    <th>Otel</th>
                    <th>Puanı</th>
                    <th>Detaylar</th>

                 </tr>
              </thead>
              <tbody>
            @foreach (var item in Model)
            {
                count++;
                                        <tr>
                                                 <th>@count</th>
                                                 <td>@item.name</td>
                                                 <td>@item.reviewScore</td>
                                                 <td><a href="#" class="btn btn-dark">Detaylar</a></td>
                                        </tr>                                               
            }

               </tbody>
     </table>
</div>