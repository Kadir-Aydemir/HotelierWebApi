@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<a href="/Testimonial/AddTestimonial" class="btn mb-3 btn-rounded btn-outline-primary">Referans Ekle</a>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Adı</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
           <tr>
                 <td>@item.TestimonialID</td>
                 <td>@item.Name</td>
                 <td>@item.Title</td>                                         
                 <td>@item.Description</td>
                 <td><img style="max-height:50px;max-width:50px;" src="@item.Image"/></td>
                 <td><a href="/Staff/DeleteStaff/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                 <td><a href="/Staff/UpdateStaff/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</a></td>
                 <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detay</a></td>                                                                                                                                                                                                                                                                                                       
           </tr>               
    }
</table>



