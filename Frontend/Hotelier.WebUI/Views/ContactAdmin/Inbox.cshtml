@model List<InboxContactDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

 <div class="row">
                    <div class="col-lg-12">
                         <div class="email-left-box"><a href="/ContactAdmin/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                               @await Html.PartialAsync("SideBarContactAdminPartial")
                               @await Html.PartialAsync("SideBarContactAdminCategoryPartial")
                         </div>
                                <div class="email-right-box">
                                    <div role="toolbar" class="toolbar">
                                        <div class="btn-group">
                                            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">More <span class="caret m-l-5"></span></button>
                                            
                                        </div>
                                    </div>
                                    <div class="email-list m-t-15">
                                        @foreach(var item in Model){
                                                <div class="message">
                                                    <a href="/ContactAdmin/InboxMessageDetails/@item.ContactID">
                                                    <div class="col-mail col-mail-1">
                                                        <div class="email-checkbox">
                                                            <input type="checkbox" id="chk2">
                                                            <label class="toggle" for="chk2"></label>
                                                        </div><span class="star-toggle ti-star"></span>
                                                    </div>
                                                    <div class="col-mail col-mail-2">
                                                        <div class="subject"><b>@item.Name</b> - @item.Subject - @item.Message</div>
                                                        <div class="date">
                                                            @if (item.Date.Day == DateTime.Now.Day)
                                                            {
                                                                @(((DateTime)item.Date).ToString("HH:mm"))
                                                            }
                                                            @if (item.Date.Day != DateTime.Now.Day)
                                                            {
                                                                @(((DateTime)item.Date).ToString("dd MMM"))
                                                            }   
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        }                                      
                                    </div>
                                </div>
                    </div>
                </div>

