@model CreateSendMessageDto
@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

 <div class="col-lg-12">

                                <div class="email-left-box"><a href="/ContactAdmin/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                                    @await Html.PartialAsync("SideBarContactAdminPartial")
                                    @await Html.PartialAsync("SideBarContactAdminCategoryPartial")
                                </div>
                                <div class="email-right-box">
                                    <div class="toolbar" role="toolbar">
                                        <div class="btn-group m-b-20">
                                            <button type="button" class="btn btn-light"><i class="fa fa-archive"></i>
                                            </button>
                                            <button type="button" class="btn btn-light"><i class="fa fa-exclamation-circle"></i>
                                            </button>
                                            <button type="button" class="btn btn-light"><i class="fa fa-trash"></i>
                                            </button>
                                        </div>
                                        <div class="btn-group m-b-20">
                                            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown"><i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
                                            </button>
                                            <div class="dropdown-menu"> 
                                                <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  
                                                <a class="dropdown-item" href="javascript: void(0);">Promosyon</a> 
                                                <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a> 
                                                <a class="dropdown-item" href="javascript: void(0);">Forumlar</a>
                                            </div>
                                        </div>
                                        <div class="btn-group m-b-20">
                                            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown"><i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  
                                                <a class="dropdown-item" href="javascript: void(0);">Promosyon</a> 
                                                <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a> 
                                                <a class="dropdown-item" href="javascript: void(0);">Forumlar</a>
                                            </div>
                                        </div>
                                        <div class="btn-group m-b-20">
                                            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">Daha Fazla<span class="caret m-l-5"></span></button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="javascript: void(0);">Okunmadı işaretle</a> 
                                                <a class="dropdown-item" href="javascript: void(0);">Görevlere kaydet</a>  
                                                <a class="dropdown-item" href="javascript: void(0);">Yıldızla</a>  
                                                <a class="dropdown-item" href="javascript: void(0);">Sessiz</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="compose-content mt-5">
                                        <form method="post">
                                            <div class="form-group">
                                                <input type="text" class="form-control bg-transparent" asp-for="ReceiverMail" placeholder=" Alıcı Mail">
                                            </div>
                                             <div class="form-group">
                                                <input type="text" class="form-control bg-transparent" asp-for="ReceiverName" placeholder=" Alıcı Adı">
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control bg-transparent" asp-for="Title" placeholder=" Konu">
                                            </div>
                                            <div class="form-group">
                                                <textarea class="textarea_editor form-control bg-light" asp-for="Content" rows="15" placeholder="Mesajınızı giriniz ..."></textarea>
                                            </div>

                                             <div class="text-left m-t-15">
                                                <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
                                                <a class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20" href="/ContactAdmin/Inbox"><i class="ti-close m-r-5 f-s-12"></i> Vazgeç</a>
                                            </div>
                                        </form>       
                                    </div>
                                   
                                </div>

 </div>

