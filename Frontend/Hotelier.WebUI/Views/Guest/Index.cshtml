@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}




<a href="/Guest/AddGuest" class="btn mb-3 btn-rounded btn-outline-primary">Misafir Ekle</a>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>       
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
            <tr>
                    <td>@count</td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.City</td>
                                    <td><a href="/Guest/DeleteGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                                    <td><a href="/Guest/UpdateGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</a></td>
                   </tr>     
    }
</table>




